@model Client


<script>
    window.onload = function() {
    getNumber()
    }
    function getNumber(){
        
        $.ajax(
            {
                url: "/Client/GenerateClientNumber",
                
                
                success: function(result){
                    console.log(result);
                
                    $("#number").html(result);
                }
            }
         );
    }


</script>
<div class="main-content">
               <div class="content-wrapper">
                  <div class="container-fluid">
           
                    <section id="horizontal-form-layouts">
                   
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title-wrap bar-success">
                                            <h4 class="card-title" id="horz-layout-basic">Clients</h4>
                                        </div>
                                        <p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
                                    </div>
                                    <div class="card-body">
                                        <div class="px-3">
                                            <form method="post" asp-action="SaveAdd" asp-controller="client" class="form form-horizontal">
                                             
                                                   <div class="form-group row">
                                                        <label asp-for="Name" class="col-md-3 label-control" >Client Name : </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Name" type="text"  class="form-control" >
                                                            <span asp-validation-for="Name" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                   <div class="form-group row">
                                                        <label class="col-md-3 label-control" asp-for="Phone">phone : </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Phone" type="text"  class="form-control">
                                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row" id="number">
                                                        <label class="col-md-3 label-control" asp-for="Number">Number : </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Number" type="text"  class="form-control">
                                                            <span asp-validation-for="Number" class="text-danger"></span>
                                                            
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-md-3 label-control" asp-for="Address">Address: </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Address" type="text" class="form-control" >
                                                            <span asp-validation-for="Address" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                 
                                   
                                                        
                                                      <div class="form-actions">
                                                    <button type="button" class="btn btn-danger mr-1" onclick="location.href='@Url.Action("Index","Home")';">
                                                        <i class="icon-trash"></i> Cancel
                                                    </button>
                                                    <button type="submit" class="btn btn-success" >
                                                        <i class="icon-note"></i> Save
                                                    </button>
                                                </div>

                    
                                                </form></div>
                    
                                                
                                            
                                        </div>
                                    
                                </div>
                            </div>
                        </section>
                  </div>
               </div>
            </div>



            @section Scripts{
<!--JQuery PAckage -->
 

    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
   
}