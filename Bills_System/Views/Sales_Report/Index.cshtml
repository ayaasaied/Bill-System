@using Bills.ViewModels

@model SalesReport

@{
    List<SalesDetalis> tableDet = ViewBag.tableData;
}

<div class="main-content">
    <div class="content-wrapper">
        <div class="container-fluid">
           
        <section id="horizontal-form-layouts">
                   
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title-wrap bar-success">
                                <h4 class="card-title" id="horz-layout-basic">Sales Report </h4>
                            </div>
                            <p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
                        </div>
                        <div class="card-body">
                            <div class="px-3">
                                <form class="form form-horizontal" asp-controller="Sales_Report" asp-action="GetData">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="projectinput7">Choose a period 
                                            : </label>
                                        
                                            
                                            <div class="col-md-9 input-group" >
                                                <input type="text" value="From" asp-for="startDate" id="startDate" name="startDate" class="datepicker form-control inline">
                                                <label class="input-group-addon btn" for="startDate">
                                                    <span class="fa fa-calendar"></span>
                                                </label>

                                                <span asp-validation-for="startDate" class="text-danger"></span>
                                            </div>                                 
                                        

                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="projectinput7">Choose a period 
                                            : </label>
                                        
                                            <div class="col-md-9 input-group" >
                                                <input value="To" type="text" asp-for="endDate" name="endDate" id="endDate" class="datepicker form-control inline">
                                                <label class="input-group-addon btn" for="endDate">
                                                    <span class="fa fa-calendar"></span>
                                                </label>

                                                <span asp-validation-for="endDate" class="text-danger"></span>
                                            </div>                                 
                                       
                                    </div>
                                 
                                   <div class="form-actions">
                                        
                                        <button type="submit" class="btn btn-success">
                                            <i class="icon-note"></i> Show
                                        </button>
                                    </div>
                                                        
                                                      
                    
                                    </form>
                                    <table class="table">
                                              <thead class="thead-light">
                                                <tr>
                                                  <th scope="col">Sales Number</th>
                                                  <th scope="col">Sales Date</th>
                                                  <th scope="col">Client Name</th>
                                                  <th scope="col">Total Bill</th>
                                                  

                                                </tr>
                                              </thead>
                                              @if(tableDet!=null)
                                              {
                                              <tbody>
                                                  
                                              @for(int i=0; i<tableDet.Count; i++)
                                                {
                                                    <tr> 
                                                        <td>@tableDet[i].S.BillsNumber</td>
                                                        <td>@tableDet[i].S.Date.ToString("yyyy-MM-dd")</td>
                                                        <td>@tableDet[i].S.Client.Name</td>
                                                        <td>@tableDet[i].S.TotalBill</td>
                                                        
                                                    </tr>
                                                }
                                              </tbody>
                                              }
                                          </table>
                                </div>

                    
                                    
                                            
                            </div>
                                    
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts{
<!--JQuery PAckage -->  
    <script>
         $(function () {
        $('.datepicker').datepicker(
        {
            dateFormat: 'yy-mm-dd'
        });
    });
    </script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}